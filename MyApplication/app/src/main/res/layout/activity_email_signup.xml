<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".EmailSignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Outstagram"
        android:gravity="center"
        android:layout_marginTop="85dp"
        android:textColor="#222121"
        android:textSize="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="56dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_inputbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:hint="아이디를 입력해주세요"
            android:layout_marginBottom="16dp"
            android:textColorHint="#4A4848" />

        <EditText
            android:id="@+id/password1_inputbox"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:hint="비밀번호를 입력해주세요"
            android:layout_marginBottom="6dp"
            android:textColorHint="#4A4848" />

        <EditText
            android:id="@+id/password2_inputbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:hint="비밀번호를 다시 입력해주세요"
            android:layout_marginBottom="6dp"
            android:textColorHint="#4A4848" />


    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#989090"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="로그인 하기"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#989090"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_gravity="center"/>


</LinearLayout>